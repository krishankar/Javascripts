<script>
var button = document.querySelector("button");
button.addEventListener("click",rainbowColor);
var color1=document.getElementById("list1");
var color2=document.getElementById("list2");
var color3=document.getElementById("list3");
var color4=document.getElementById("list4");
var color5=document.getElementById("list5");
var color6=document.getElementById("list6");
var color7=document.getElementById("list7");
function rainbowColor()
{
color1.style.background = "red";
color2.style background = "orange";
color3.style.background = "yellow";
color4.style.background = "green";
color5.style.background = "blue";
color6.style.background = "indigo";
color7.style.background = "violet";
};
</script>
